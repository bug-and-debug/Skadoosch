# Uncomment the next line to define a global platform for your project
platform :ios, ‘9.0’

target 'Skadoosch' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Networking
  pod 'TestFairy'
  pod 'OneSignal'
  pod 'ReachabilitySwift'
  pod 'Kingfisher', '~> 3.0'
  pod 'Alamofire', '~> 4.0'

  # Networking - Firebase
  pod 'Firebase'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'FirebaseUtils'

  # Networking - Google Places
  pod 'GooglePlaces'
  pod 'GooglePlacePicker'

  # Networking - Facebook
  pod 'FBSDKCoreKit'
  pod 'FBSDKLoginKit'

  # User Interface
  pod 'BRYXBanner', '~> 0.7'
  pod 'SwiftyStarRatingView'
  pod 'CVCalendar', '~> 1.4.1'
  pod 'CMPageControl'
  pod 'FSCalendar'
  pod "XMSegmentedControl"

  # Utilities
  pod 'IQKeyboardManagerSwift'

  target 'SkadooschTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SkadooschUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
